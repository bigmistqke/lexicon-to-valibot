{
  "name": "lexicon-to-valibot",
  "version": "0.1.0",
  "description": "Convert AT Protocol Lexicon schemas to Valibot validators",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": ["lexicon", "valibot", "atproto", "bluesky", "validation"],
  "license": "MIT",
  "peerDependencies": {
    "valibot": ">=1.0.0"
  },
  "devDependencies": {
    "@atproto/lexicon": "^0.4.0",
    "typescript": "^5.0.0",
    "valibot": "^1.0.0",
    "vitest": "^2.0.0"
  }
}
